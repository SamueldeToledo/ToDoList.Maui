<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ToDoList.CreateToDo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:ToDoList.ViewModel">
    <toolkit:Popup.BindingContext>
        <vm:CreateToDoViewModel x:Name="Vm" />
    </toolkit:Popup.BindingContext>
    <Grid
        ColumnDefinitions="Auto,*"
        MinimumHeightRequest="100"
        MinimumWidthRequest="500"
        RowDefinitions="Auto,*,Auto"
        RowSpacing="20">
        <Label
            x:Name="lblTitle"
            Text="Title: "
            TextType="Html" />
        <Editor
            x:Name="EtTitle"
            Grid.Column="1"
            AutoSize="TextChanges"
            Text="{Binding ToDo.Title}" />

        <Label
            x:Name="lblDescription"
            Grid.Row="1"
            MaximumHeightRequest="300"
            MaximumWidthRequest="500"
            Text="Description: "
            TextType="Html" />
        <Editor
            x:Name="EtDescription"
            Grid.Row="1"
            Grid.Column="1"
            AutoSize="TextChanges"
            Text="{Binding ToDo.Description}"
            VerticalOptions="Center" />

        <HorizontalStackLayout
            Grid.Row="2"
            Grid.Column="1"
            HorizontalOptions="End"
            Spacing="35">
            <Button
                x:Name="BtnClose"
                Background="Black"
                Clicked="Close_Clicked"
                HorizontalOptions="End"
                Text="Close" />
            <Button
                x:Name="BtnCreate"
                Background="Black"
                Command="{Binding CreateCommand}"
                HorizontalOptions="End"
                Text="Create" />
        </HorizontalStackLayout>

    </Grid>
</toolkit:Popup>
